@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        color: #ffc7c7;
    }
</style>

<div class="signin" style="padding:20px; height: 380px;">
    <div class="container">
        <h3>Log in</h3>
        <hr class="line" />
        <div style="padding-right:50px">
            <form id="account" method="post">
                <!--<div asp-validation-summary="All" class="text-danger"></div>-->
                <div class="form-group">
                    <label asp-for="Input.Email" style="padding-right:130px"></label>
                    <input asp-for="Input.Email" class="login form-control" placeholder="E-mail" />
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" style="padding-right:130px"></label>
                    <input asp-for="Input.Password" class="login form-control" placeholder="Password" />
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label for="remember" asp-for="Input.RememberMe" style="float:left">
                            <input id="remember" asp-for="Input.RememberMe" style="margin-bottom:15px" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="login-button log-button btn btn-primary">Log in</button>
                </div>
                <div class="form-group" style="float:left">
                    <a id="forgot-password" asp-page="./ForgotPassword" style="color:#1A0099; font-size:12px"><ins>Forgot your password?</ins></a>
                    <!--<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>-->
                </div>
                <div class="container" style="margin-top: 50px">
                    <div class="row">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
