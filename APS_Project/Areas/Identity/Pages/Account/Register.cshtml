@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}

<style>
    body {
        color: #ffc7c7;
    }
</style>
<div class="signup" style="padding:20px; height:580px">
        <div class="container">
                <h3>Sign Up</h3>
                <hr class="line">
                <div style="padding-right:50px">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="form-group">
                            <label asp-for="Input.Name" style="padding-right:130px">Name</label>
                            <input asp-for="Input.Name" class="login form-control">
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.LastName" style="padding-right:100px">Last Name</label>
                            <input asp-for="Input.LastName" class="login form-control">
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email" style="padding-right:130px">E-mail</label>
                            <input asp-for="Input.Email" class="login form-control">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" style="padding-right:130px">Password</label>
                            <input asp-for="Input.Password" class="login form-control">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <hr class="line">

                        <label for="agreement" style="float:right">I agree with the privacy policy</label>
                        <input type="checkbox" name="agreement" style="margin-bottom:15px;">

                        <button type="submit" class="login-button log-button btn btn-primary">Let's go!</button>
                    </form>
                </div>
        </div>
</div>
