<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - APS_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="background">
    <header>
        <div id="mySidenav" class="sidenav">
            <div style="margin-top: 30px">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <a href="#" style="color: #ffc7c7">Publish</a>
                <a href="#" style="color: #ffc7c7">My favourites</a>
                <a href="#" style="color: #ffc7c7">Recepies</a>
            </div>
            <a href="#" style="margin-top:430px; color: #ffc7c7">Log out</a>
        </div>
            <span style="color:#ffc7c7;font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>
            <img src="/Data/Logo.png" alt="Logo" style="float:right; width:128px; height: 128px; margin-right: 20px; margin-bottom: 50px">
            <hr style="height:2px; border-width:0; color:#ffc7c7; background-color:#ffc7c7; margin-top:50px">
           
</header>
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }
    </script>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - APS_Project - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
