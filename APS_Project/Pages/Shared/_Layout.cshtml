<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - APS_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="background">
    <header>
        <div>
            <span class="menu-button" onclick="openNav()">&#9776;</span>
            <img src="/Data/Logo.png" alt="Logo" style="float:right;">
        </div>
        <hr class="line">
    </header>
    <div id="mySidenav" class="sidenav">
        <div style="margin-top: 30px">
            <a href="javascript:void(0)" class="closebtn menu-button" onclick="closeNav()" >&times;</a>
            <ul class="navbar-nav flex-grow-1">
                @if (User.Identity.IsAuthenticated) 
                {
                    <li>
                        <img href=""/> 
                    </li>
                }
                <li class="nav-item">
                    <a class="menu-button" asp-area="" asp-page="/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="menu-button" asp-area="" asp-page="/Publish">Publish</a>
                </li>
                <li class="nav-item">
                    <a class="menu-button" asp-area="" asp-page="/Myfavourites">My favourites</a>
                </li>
                <li class="nav-item">
                    <a class="menu-button" asp-area="" asp-page="/MyRecipes">My Recipes</a>
                </li>
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a class="menu-button" asp-area="" asp-page="LogOut">Log out</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="menu-button" asp-area="" asp-page="SignUp">Sign up</a>
                            </li>
                            <li>
                                <a class="menu-button" asp-area="" asp-page="SignIn">Sign in</a>
                            </li>

                        }
                    }
            </ul>
        </div>
    </div>
           
    <div class="container">
        <main role="main" class="pb-3" style="text-align:center">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
